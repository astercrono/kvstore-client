{
	"ecmaFeatures": {
		"modules": true,
		"spread" : true,
		"restParams" : true
	},
	"env" : {
		"browser" : true,
		"node" : true,
		"es6" : true
	},
	"rules" : {
		"indent": ["error", "tab"],
		"semi": "error"
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	}
}